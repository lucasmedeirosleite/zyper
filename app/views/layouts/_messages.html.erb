<% if flash[:alert] || flash[:notice] %>
  <div class="row messages-row">
    <div class="col s12">
      <% if flash[:notice] %>
        <div class="card-panel teal darken-1">
          <%= flash[:notice] %>
        </div>
      <% end %>
      
      <% if flash[:alert] %>
        <div class="card-panel red darken-1">
          <%= flash[:alert] %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>